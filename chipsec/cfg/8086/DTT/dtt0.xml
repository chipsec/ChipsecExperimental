  <mmio>
    <bar name="TMBAR" register="TMBAR" base_field="TMMBA" size="0x20000" desc="Thermal Controller"/>
  </mmio>

  <!-- #################################### -->
  <!--                                      -->
  <!-- Configuration registers              -->
  <!--                                      -->
  <!-- #################################### -->
  <registers>
    <register name="DID" type="pcicfg" offset="2" size="2" desc="Device Identification Number" />

    <register name="TMBAR" type="pcicfg" offset="0x10" size="8" desc="Thermal Controller Base Address">
        <field name="TMMBA" bit="17" size="26" desc="Base Address" />
        <field name="ADM" bit="4" size="13" desc="Address Mask (ADM)" />
        <field name="PM" bit="3" size="1" desc="Prefetchable Memory" />
        <field name="MT" bit="1" size="2" desc="Memory Type" />
        <field name="MIOS" bit="0" size="1" desc="Memory I/O Space (MIOS)" />
    </register>
  </registers>

