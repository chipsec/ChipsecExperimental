  <mmio>
    <bar name="HDABAR" register="HDABAR" base_field="BA" size="0x7000" desc="Thermal Controller"/>
  </mmio>

  <!-- #################################### -->
  <!--                                      -->
  <!-- Configuration registers              -->
  <!--                                      -->
  <!-- #################################### -->
  <registers>
    <register name="DID" type="pcicfg" offset="2" size="2" desc="Device Identification Number" />

    <register name="HDABAR" type="pcicfg" offset="0x10" size="8" desc="Intel HD Audio Base Address">
        <field name="BA" bit="14" size="40" desc="Base Address" />
        <field name="PREF" bit="3" size="1" desc="Prefetchable Memory" />
        <field name="ADDRNG" bit="1" size="2" desc="Address Range" />
        <field name="SPTYP" bit="0" size="1" desc="Space Type" />
    </register>
  </registers>

